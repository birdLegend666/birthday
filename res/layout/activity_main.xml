<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" 
	android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<LinearLayout android:layout_width="match_parent"
	    android:layout_height="45dp" android:orientation="horizontal"
	    android:background="@drawable/schedule_title_bg" 
	    >
	    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:layout_marginLeft="20dp" android:background="@drawable/previous_year"/>
	    
	    <com.wbw.birthday.widget.BorderText
	      android:id="@+id/schedule_toptext"
	    android:layout_width="fill_parent" 
	    android:layout_height="45dp"
        android:gravity="center"     
        android:textSize="18sp" 
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
	/>
	    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
	        android:layout_marginRight="20dp" android:background="@drawable/next_year"/>
	    
	    
	</LinearLayout>

	
	<ViewFlipper android:id="@+id/flipper"
		android:layout_width="fill_parent" 
		android:layout_height="fill_parent" />
</LinearLayout>
