<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    			android:background="@drawable/list_view_sigle_item_bg"
    android:orientation="horizontal">
    <ImageView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mark_date"
        android:layout_gravity="center"
        		android:maxWidth="28dp"
			android:maxHeight="28dp"
			android:adjustViewBounds="true"
			android:layout_marginLeft="20dp"/>
    <LinearLayout android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_weight="1">
        		<TextView android:id="@+id/list_item_text1"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 		 
		 	android:singleLine="true"
			android:textSize="19sp" 							
			 android:layout_gravity="center"
			android:gravity="center_vertical"
			android:layout_weight="1"			
			android:textColor="@color/type_title_color"
			/>
					<TextView android:id="@+id/list_item_text2"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 		 
		 			 android:singleLine="true"
			android:textSize="19sp" 							
			 android:layout_gravity="center"
			android:gravity="center_vertical"
			android:layout_weight="1"			
			android:textColor="@color/type_title_color"
			/>
					<TextView android:id="@+id/list_item_text3"
			android:layout_width="match_parent" 
			android:layout_height="wrap_content" 		 
		 			 android:singleLine="true"
			android:textSize="19sp" 							
			 android:layout_gravity="center"
			android:gravity="center_vertical"
			android:layout_weight="1"		
			android:textColor="@color/type_title_color"	
			android:visibility="gone"
			/>
    </LinearLayout>

</LinearLayout>
